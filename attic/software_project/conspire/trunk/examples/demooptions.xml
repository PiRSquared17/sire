<options>

  <option>
    <key>temperature</key>
    <description>The temperature of the simulation.</description>
    <value><temperature units="celsius">25</temperature></value>
  </option>

  <option>
    <key>pressure</key>
    <description>The pressure of the simulation.</description>
    <value><pressure units="atm">1</pressure></value>
  </option>

  <option>
    <key>nmoves</key>
    <description>The number of moves to perform.</description>
    <value><integer minimum="1">1</integer></value>
  </option>

  <option>
    <key>save_frequency</key>
    <description>The number of steps between saving coordinates during  
                 a trajectory</description>
    <value><integer minimum="0">0</integer></value>
  </option>

  <option allow_multiple="true" optional="false">
    <key>solute</key>
    <description>Define the solute in the simulation.</description>
    <value><molecule>file:1,molecule:1</molecule></value>
  </option>

  <option>
    <key>moves</key>
    <description>Options that describe the moves
                 to be made in the simulation</description>
    <value>
      <options>
        <option>
          <key>solute</key>
          <description>The frequency of solute moves</description>
          <value><integer minimum="0">0</integer></value>
        </option>

        <option>
          <key>volume</key>
          <description>The frequency of volume moves</description>
          <value><integer minimum="0">0</integer></value>
        </option>
      </options>
    </value>
  </option>

</options>

